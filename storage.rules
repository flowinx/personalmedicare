rules_version = '2';

// Firebase Storage Security Rules for PersonalMediCare
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write to their own profile files
    match /profiles/{fileName} {
      allow read, write: if request.auth != null && 
        (fileName.matches('profile_' + request.auth.uid + '.*') || 
         fileName.matches(request.auth.uid + '_.*'));
    }
    
    // Allow authenticated users to read and write to their own member files
    match /members/{fileName} {
      allow read, write: if request.auth != null && 
        (fileName.matches('member_' + request.auth.uid + '_.*') || 
         fileName.matches(request.auth.uid + '_.*'));
    }
    
    // Allow authenticated users (including anonymous) to test uploads
    match /test/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Block all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
